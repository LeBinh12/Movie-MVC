@model List<WbeMovieUser.Models.Nation>
<ul class="dropdown-menu" aria-labelledby="countryDropdown">
    @if (Model != null && Model.Any())
    {
        foreach (var nation in Model)
        {
            <li>
                <a class="dropdown-item" style="text-decoration: none; border-bottom: none;" href="@Url.Action("Nation", "Child", new { id = nation.nation_id })">
                    @nation.nation_name
                </a>
            </li>
        }
    }
    else
    {
        <li><a class="dropdown-item" href="#">Không có quốc gia</a></li>
    }
</ul>