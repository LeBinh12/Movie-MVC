<div class="container-fluid py-4">
    <h3>Phim mới</h3>
    <div id="movieCarousel" class="carousel slide">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="row row-cols-2 row-cols-md-5 g-3">
                    @if (movie != null)
                    {
                        foreach (var item in movie)
                        {
                            <div class="col">
                                <div class="movie-card">
                                    <a href="@Url.Action("Detail", "HomePage", new { id = item.movie_id })">
                                        <img src="@item.thumbnail_url" alt="@item.title" style="height: 355px;" />
                                    </a>
                                    <p class="text-center mt-2">
                                        <a href="@Url.Action("Detail", "HomePage", new { id = item.movie_id })" style="text-decoration: none; color: white">
                                            @item.title
                                        </a>
                                    </p>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
            <div class="carousel-item">
                <div class="row row-cols-2 row-cols-md-5 g-3">
                    @if (movie != null)
