<style>
    body {
        background-color: #111;
        color: white;
    }

    .carousel-item-body img {
        width: 100%;
        border-radius: 10px;
        max-height: 330px; /* Giảm kích thước hình ảnh cho điện thoại */
        object-fit: cover; /* Đảm bảo hình ảnh không bị méo */
    }

    .movie-card {
        position: relative;
        border-radius: 10px;
        overflow: hidden;
        transition: transform 0.3s;
    }

        .movie-card img {
            width: 100%;
            border-radius: 10px;
        }

        .movie-card:hover {
            transform: scale(1.05);
        }

    .movie-title {
        white-space: nowrap; /* Ngăn tiêu đề tràn dòng */
        overflow: hidden;
        text-overflow: ellipsis; /* Thêm dấu ... nếu tiêu đề quá dài */
        max-width: 100%; /* Giới hạn chiều rộng */
    }
</style>

