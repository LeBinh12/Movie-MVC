
<style>
    body {
        background-color: #111;
        color: white;
    }

    .carousel-item img {
        width: 100%;
        border-radius: 10px;
    }

    .movie-card {
        position: relative;
        border-radius: 10px;
        overflow: hidden;
        transition: transform 0.3s;
    }

        .movie-card img {
            width: 100%;
            border-radius: 10px;
        }

        .movie-card:hover {
            transform: scale(1.05);
        }
</style>

@{
    var movie = ViewBag.listMovie1 as List<WbeMovieUser.Models.DTO.MoviesDTO>;
