@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/css/bootstrap-select.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="~/Content/css/Admin.css" rel="stylesheet" />
    <link href="~/Content/css/ManagerMovie.css" rel="stylesheet" />
    <link href="~/Content/css/Chat.css" rel="stylesheet" />
    <link href="~/Content/css/ManagerCategary.css" rel="stylesheet" />
</head>
<body>
    <div class="sidebar">
        <h3>MOVIE</h3>
        <ul style="list-style: none; padding-left: 0;">
            <li><a href="~/ManagerMovie">Quản lý phim</a></li>
            <li><a href="~/ManagerCategories">Quản lý Thể loại phim</a></li>
            <li><a href="~/ManagerNation">Quản lý quốc gia</a></li>
            <li><a href="~/ManagerActor">Quản lý diễn viên</a></li>
            <li><a href="~/ManagerDirector">Quản lý đạo diễn</a></li>
            <li><a href="~/ManagerUser">Quản lý người dùng</a></li>
        </ul>
    </div>

    <div class="header">
        @Html.Action("AdminNavbar", "HomeAdmin")
    </div>

    <div class="main-content">
        @RenderBody()
    </div>


    <button id="adminChatBtn" class="chat-toggle-btn admin">...</button>

    <div id="adminChatBox" class="chat-box admin" style="display: none;">
        <div class="chat-header admin">
            Admin Chat
            <span onclick="document.getElementById('adminChatBox').style.display='none'" style="cursor:pointer">×</span>
        </div>
        <div id="adminMessages" class="chat-messages" style="color:black;"></div>
        <div class="chat-input">
            <input type="text" id="adminInput" placeholder="Nhập tin nhắn..." />
            <button onclick="sendMessage('admin')" class="admin">Gửi</button>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/js/bootstrap-select.min.js"></script>
    <script src="~/Content/js/ManagerMovie.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.4.3.min.js"></script>
    <script src="/signalr/hubs"></script>
    <script src="~/Content/js/Chat.js"></script>
    <script src="~/Content/js/ManagerCategories.js"></script>
    <script src="~/Content/js/ChatBox.js"></script>
    <script src="~/Content/js/AjaxNation.js"></script>
    <script src="~/Content/js/AjaxAddMovie3.js"></script>
    <script src="~/Content/js/AjaxCategories2.js"></script>
    <script src="~/Content/js/AjaxActor2.js"></script>
    <script src="~/Content/js/AjaxDirector2.js"></script>
    <script src="~/Content/js/AjaxUser.js"></script>
    <script src="~/Content/js/AjaxAuthenticationAdmin.js"></script>


    <script>
        document.getElementById('adminChatBtn').addEventListener('click', function () {
            const chatBox = document.getElementById('adminChatBox');
            if (chatBox.style.display === 'none' || chatBox.style.display === '') {
                chatBox.style.display = 'block';
            } else {
                chatBox.style.display = 'none';
            }
        });
    </script>
</body>
</html>
