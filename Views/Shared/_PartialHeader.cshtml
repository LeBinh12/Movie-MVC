<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content text-dark" style="border-radius: 12px; box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);">
            <div class="modal-header border-0">
                <ul class="nav nav-tabs card-header-tabs" id="loginTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="login-tab" data-bs-toggle="tab" data-bs-target="#login" type="button" role="tab" aria-controls="login" aria-selected="true" style="font-weight: 500;">Login</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="register-tab" data-bs-toggle="tab" data-bs-target="#register" type="button" role="tab" aria-controls="register" aria-selected="false" style="font-weight: 500;">Register</button>
                    </li>
                </ul>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <div class="tab-content">
                    <!-- Login Tab -->
                    <div class="tab-pane fade show active" id="login" role="tabpanel" aria-labelledby="login-tab">
                        <form id="loginForm" asp-controller="Account" asp-action="Login" method="post" class="needs-validation" novalidate>
                            <div class="mb-4">
                                <label for="loginEmail" class="form-label text-dark">Email address</label>
                                <input type="email" class="form-control bg-white text-dark border-light" id="loginEmail" name="Email" placeholder="Enter email" required style="transition: all 0.3s ease; border-radius: 8px;">
                                <div class="invalid-feedback">Please provide a valid email.</div>
                            </div>
                            <div class="mb-4">
                                <label for="loginPassword" class="form-label text-dark">Password</label>
                                <input type="password" class="form-control bg-white text-dark border-light" id="loginPassword" name="Password" placeholder="Password" required style="transition: all 0.3s ease; border-radius: 8px;">
                                <div class="invalid-feedback">Please provide a password.</div>
                            </div>
                            <button type="submit" class="btn btn-primary w-100 mb-3" style="border-radius: 8px;">Login</button>
                            <div id="loginMessage" class="mt-3"></div>
                        </form>
                        <div class="text-center mt-3">
                            <p class="small text-muted">Forgot your password? <a href="#" data-bs-toggle="modal" data-bs-target="#forgotPasswordModal" data-bs-dismiss="modal" class="text-primary" style="color: #ff4d4d; text-decoration: none; transition: all 0.3s ease;">Reset Password</a></p>
                        </div>
                    </div>

                    <!-- Register Tab -->
                    <div class="tab-pane fade" id="register" role="tabpanel" aria-labelledby="register-tab">
                        <form id="registerForm" class="needs-validation" novalidate>
                            <div class="mb-4">
                                <label for="registerUsername" class="form-label text-dark">Tên đăng nhập</label>
                                <input type="text" class="form-control bg-white text-dark border-light" id="registerUsername" name="userName" placeholder="Enter username" required style="transition: all 0.3s ease; border-radius: 8px;">
                                <div class="invalid-feedback">Please provide a username.</div>
                            </div>
                            <div class="mb-4">
                                <label for="registerEmail" class="form-label text-dark">Email</label>
                                <input type="email" class="form-control bg-white text-dark border-light" id="registerEmail" name="email" placeholder="Enter email" required style="transition: all 0.3s ease; border-radius: 8px;">
                                <div class="invalid-feedback">Please provide a valid email.</div>
                            </div>
                            <div class="mb-4">
                                <label for="registerAvatar" class="form-label text-dark">Avatar</label>
                                <input type="file" class="form-control bg-white text-dark border-light" id="registerAvatar" name="avatar" accept="image/*" style="transition: all 0.3s ease; border-radius: 8px;">
                                <div class="invalid-feedback">Please select an image file.</div>
                            </div>
                            <div class="mb-4">
                                <label for="registerPassword" class="form-label text-dark">Mật khẩu</label>
                                <input type="password" class="form-control bg-white text-dark border-light" id="registerPassword" name="password" placeholder="Password" required style="transition: all 0.3s ease; border-radius: 8px;">
                                <div class="invalid-feedback">Please provide a password.</div>
                            </div>
                            <div class="mb-4">
                                <label for="registerConfirmPassword" class="form-label text-dark">Nhập lại mật khẩu</label>
                                <input type="password" class="form-control bg-white text-dark border-light" id="registerConfirmPassword" name="changePassword" placeholder="Confirm Password" required style="transition: all 0.3s ease; border-radius: 8px;">
                                <div class="invalid-feedback">Passwords must match.</div>
                            </div>
                            <button type="submit" class="btn btn-success w-100 mb-3" style="border-radius: 8px;">Register</button>
                            <div id="registerMessage" class="mt-3"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

